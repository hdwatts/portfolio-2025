<html>
	<style>
		:root {
			--bg: #f8f8f8;
			--panel: #111a2e;
			--accent: #ff7a00;
			--text: #e8eefc;
			--muted: #99a4bf;
		}

		@font-face {
			font-family: "Visitor";
			src: url("/ten-freethrows/visitor1.ttf");
		}

		* {
			box-sizing: border-box;
		}

		html,
		body {
			height: 100dvh;
			margin: 0;
			overflow: hidden; /* Prevent scrolling */
		}

		body {
			display: flex;
			flex-direction: column;
			background: #d6c1a1;
			color: var(--text);
			font:
				16px/1.4 system-ui,
				-apple-system,
				Segoe UI,
				Roboto,
				Helvetica,
				Arial;
		}

		header {
			display: flex;
			gap: 12px;
			align-items: center;
			justify-content: space-between;
			padding: 10px 14px;
			background: linear-gradient(180deg, #0f1830, #0b1220);
		}

		header h1 {
			font-size: 18px;
			margin: 0;
			letter-spacing: 0.3px;
		}

		#hud {
			display: flex;
			flex-wrap: wrap;
			gap: 10px;
			align-items: center;
		}

		.pill {
			background: rgba(255, 255, 255, 0.06);
			border: 1px solid rgba(255, 255, 255, 0.08);
			padding: 6px 10px;
			border-radius: 999px;
			display: flex;
			align-items: center;
			gap: 8px;
		}

		.pill b {
			font-weight: 700;
		}

		.btn {
			cursor: pointer;
			border: 1px solid rgba(255, 255, 255, 0.14);
			background: linear-gradient(180deg, #16223f, #0f1a34);
			color: var(--text);
			padding: 8px 12px;
			border-radius: 999px;
			transition:
				0.2s transform,
				0.2s opacity;
			box-shadow: 0 6px 18px rgba(0, 0, 0, 0.25);
		}

		.btn:hover {
			transform: translateY(-1px);
		}

		#wrapper {
			height: 100dvh;
			width: 100dvw;
			display: flex;
			flex-direction: column;
		}

		#canvasWrap {
			position: relative;
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
			overflow: hidden;
		}

		canvas {
			height: 100dvh;
			width: calc(100dvh * 3 / 2); /* 3:2 aspect ratio based on height */
			max-width: 100vw;
		}

		#overlay {
			position: absolute;
			inset: 0;
			pointer-events: none;
			display: flex;
			align-items: flex-start;
			justify-content: space-between;
			padding: 14px;
		}

		#tips {
			max-width: 300px; /* Reduced for fixed canvas width */
			opacity: 0.9;
			font-size: 14px; /* Smaller font for mobile */
		}

		#tips p {
			margin: 0.25rem 0;
		}

		#toast {
			position: absolute;
			left: 50%;
			top: 12%;
			transform: translateX(-50%);
			background: rgba(0, 0, 0, 0.55);
			backdrop-filter: blur(6px);
			padding: 10px 14px;
			border-radius: 12px;
			border: 1px solid rgba(255, 255, 255, 0.12);
			opacity: 0;
			transition: 0.3s opacity;
		}

		#toast.show {
			opacity: 1;
		}

		#background {
			position: absolute;
			inset: 0;
			z-index: -1;
			background-color: #d6c1a1;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		#background video {
			height: 100dvh;
			width: calc(100dvh * 3 / 2); /* Match canvas dimensions */
			max-width: 100dvw;
			object-fit: contain;
			border-radius: 8px;
		}
		#gameWrap {
			width: 100%;
			height: 100%;
			display: flex;
			position: relative;
		}
		footer {
			padding: 8px 14px;
			color: var(--muted);
			text-align: center;
			border-top: 1px solid rgba(255, 255, 255, 0.06);
			background: linear-gradient(180deg, #0f1830, #0b1220);
		}

		a {
			color: var(--accent);
		}
		#loading {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: 100%;
			text-align: center;
			height: 100%;
			background: #d6c1a1;
			font-size: 24px;
			opacity: 1;
			transition: opacity 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
		}
		.loader {
			width: 48px;
			height: 48px;
			border: 5px solid #f5f3ee;
			border-bottom-color: #c72c48;
			border-radius: 50%;
			display: inline-block;
			box-sizing: border-box;
			animation: rotation 1s linear infinite;
			transition: opacity 0.3s ease;
		}

		@keyframes rotation {
			0% {
				transform: rotate(0deg);
			}
			100% {
				transform: rotate(360deg);
			}
		}

		/* Landscape orientation styles */
		@media screen and (orientation: portrait) {
			#wrapper {
				display: none;
			}

			body::before {
				content: "Please rotate your device for the best experience.";
				position: fixed;
				inset: 0;
				font-family: "Visitor";
				background: #d6c1a1;
				color: #1e1e1e;
				display: flex;
				align-items: center;
				justify-content: center;
				text-align: center;
				font-size: 18px;
				padding: 20px;
				z-index: 9999;
			}
		}
