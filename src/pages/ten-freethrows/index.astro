		<script>
			// Force landscape orientation on mobile devices
			function requestLandscape() {
				if (
					screen.orientation &&
					"lock" in screen.orientation &&
					screen.orientation.lock
				) {
					screen.orientation.lock("landscape").catch(() => {
						// Orientation lock failed, but that's okay
						console.log("Could not lock orientation to landscape");
					});
				}
			}

			// Request landscape when page loads
			document.addEventListener("DOMContentLoaded", () => {
				// Only try to lock orientation on mobile devices
				if (window.innerWidth <= 768 && "orientation" in screen) {
					requestLandscape();
				}
			});

			// Also try when orientation changes
			window.addEventListener("orientationchange", () => {
				if (window.innerWidth <= 768 && "orientation" in screen) {
					setTimeout(requestLandscape, 100);
				}
			});
		</script>
