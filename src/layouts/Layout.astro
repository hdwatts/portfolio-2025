		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="hdwatts.com" />
		<meta property="twitter:url" content="https://hdwatts.com" />
		<meta name="twitter:title" content="Welcome | Howard Dean Watts" />
